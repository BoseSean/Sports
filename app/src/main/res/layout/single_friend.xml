<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<!--TODO: Add timestamp and -->
    <ImageView
        android:id="@+id/friend_single_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

    <TextView
        android:id="@+id/friend_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friend_single_image"
        android:layout_toEndOf="@+id/friend_single_image"
        android:layout_toRightOf="@+id/friend_single_image"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Friend_Function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/friend_single_image"
        android:layout_marginEnd="14dp"
        android:text="Add Friend" />

</RelativeLayout>