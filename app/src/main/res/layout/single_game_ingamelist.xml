<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="380dp"
    android:layout_height="100dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="5dp"

    android:layout_marginTop="10dp"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    android:orientation="vertical"
    tools:layout_marginHorizontal="@tools:sample/avatars">


    <TextView
        android:id="@+id/game_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/game_single_type"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_single_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/game_single_name"
        android:layout_marginBottom="21dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/game_single_name"
        app:layout_constraintStart_toStartOf="@+id/game_single_name"
        app:layout_constraintTop_toBottomOf="@+id/game_single_name" />


</RelativeLayout>