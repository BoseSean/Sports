<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.team7.sports.ViewGameActivity">

    <include
        android:id="@+id/create_game_bar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></include>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/create_game_bar"
        tools:context="org.team7.sports.ViewGameActivity">

        <TextView
            android:id="@+id/game_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView14"
            android:text="Game Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Sport_type_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/textView16"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView14"
            android:text="sport type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Date_TV"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView17"
            android:text="Date is"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start_time_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView7"
            android:text="Starting time is"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Location_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="Location is"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/host_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView9"
            android:text="host name is"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/host_email_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/textView10"
            android:layout_gravity="right"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView10"
            android:text="host email is"
            android:textSize="16sp" />


        <!--<TextView-->
        <!--android:id="@+id/textView12"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->

        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="Game Details"-->
        <!--android:textSize="30sp" />-->

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:text="Game Name:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="15dp"
            android:text="Sports Type:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView16"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="15dp"
            android:text="Date:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView17"
            android:layout_below="@+id/Date_TV"
            android:layout_marginTop="15dp"
            android:text="Starting Time:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="15dp"
            android:text="Location:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="15dp"
            android:text="Name of Host:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/host_name_TV"
            android:layout_marginTop="15dp"
            android:text="Host Email"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="15dp"
            android:text="Privacy:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/isPrivate_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/passwd_input_TIL"
            android:layout_toEndOf="@+id/textView8"
            android:text="TextView"
            android:textSize="16sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwd_input_TIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="16dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="If private enter password" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/join_Game_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwd_input_TIL"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/Sport_type_TV"
            android:text="JOIN"
            tools:text="JOIN" />

        <Button
            android:id="@+id/chat_Game_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/join_Game_B"
            android:layout_alignBottom="@+id/join_Game_B"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:text="CHAT"
            tools:text="Chat" />

    </RelativeLayout>
</RelativeLayout>