<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_friend_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--TODO: Add timestamp and -->
    <ImageView
        android:id="@+id/friend_single_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="375dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/wallpaper" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="281dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="107dp"
        android:text="Total Friends:   "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_request"
        android:layout_alignEnd="@+id/send_request"
        android:layout_marginEnd="6dp"
        android:text="TextView"
        android:textSize="18sp" />

    <Button
        android:id="@+id/send_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Send Friend Request"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_request"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Message User"
        android:textAlignment="center"
        android:textSize="16sp" />


</RelativeLayout>